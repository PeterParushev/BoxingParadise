@model dynamic

@{
    ViewBag.Title = "Boxing Paradise's venues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Boxers</h2>
<table class=".table-striped .table-hover .table-bordered">
    <thead>
        <tr>
            <td>
                Id
            </td>
            <td>
                Name
            </td>
            <td>
                Descriptions
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var venue in ViewBag.Venues)
        {
            <tr>
                <td>
                    @venue.Id
                </td>
                <td>
                    @venue.Name
                </td>
                <td>
                    @venue.Description
                </td>
            </tr>
        }
    </tbody>

    @Html.ActionLink("Create a new Venue", "Create");
</table>